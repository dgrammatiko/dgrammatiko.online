<style>{{ '_assets/css/blogs.css' | inlineCss | safe }}</style>

{% for blog in collections.blogs | reverse %}
  {% if loop.index < 3 %}
  {% if loop.index == 1 %}
  <article class="post featured" itemscope="" itemtype="https://schema.org/BlogPosting">
      <header class="major">
        <span class="date">
          <svg id="ttc-i-calendar-alt" class="icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512" fill=currentColor><path d="M436 160H12c-6.6 0-12-5.4-12-12v-36c0-26.5 21.5-48 48-48h48V12c0-6.6 5.4-12 12-12h40c6.6 0 12 5.4 12 12v52h128V12c0-6.6 5.4-12 12-12h40c6.6 0 12 5.4 12 12v52h48c26.5 0 48 21.5 48 48v36c0 6.6-5.4 12-12 12zM12 192h424c6.6 0 12 5.4 12 12v260c0 26.5-21.5 48-48 48H48c-26.5 0-48-21.5-48-48V204c0-6.6 5.4-12 12-12zm116 204c0-6.6-5.4-12-12-12H76c-6.6 0-12 5.4-12 12v40c0 6.6 5.4 12 12 12h40c6.6 0 12-5.4 12-12v-40zm0-128c0-6.6-5.4-12-12-12H76c-6.6 0-12 5.4-12 12v40c0 6.6 5.4 12 12 12h40c6.6 0 12-5.4 12-12v-40zm128 128c0-6.6-5.4-12-12-12h-40c-6.6 0-12 5.4-12 12v40c0 6.6 5.4 12 12 12h40c6.6 0 12-5.4 12-12v-40zm0-128c0-6.6-5.4-12-12-12h-40c-6.6 0-12 5.4-12 12v40c0 6.6 5.4 12 12 12h40c6.6 0 12-5.4 12-12v-40zm128 128c0-6.6-5.4-12-12-12h-40c-6.6 0-12 5.4-12 12v40c0 6.6 5.4 12 12 12h40c6.6 0 12-5.4 12-12v-40zm0-128c0-6.6-5.4-12-12-12h-40c-6.6 0-12 5.4-12 12v40c0 6.6 5.4 12 12 12h40c6.6 0 12-5.4 12-12v-40z"></path></svg>
          <time class="postslist-date" datetime="{{ blog.date | htmlDateString }}">{{ blog.date | readableDate }}</time>
        </span>
        <h1>{% if blog.data.title %}{{ blog.data.title }}{% else %}<code>{{ blog.url }}</code>{% endif %}</h1>
        <p>{{ blog.data.custom_excerpt }}</p>
      </header>

      <a class="image main" href="{{ blog.url }}" tabindex="-1">
      {% if blog.data.fulltextImage %}
            <img 
              data-srcset="{{ blog.data.fulltextImage | imgSuffix('320') }} 320w, {{ blog.data.fulltextImage | imgSuffix('480') }} 480w, {{ blog.data.fulltextImage | imgSuffix('768') }} 768w"
              data-src="{{ blog.data.fulltextImage | imgSuffix('320') }}"
              alt="{{ blog.data.introImageAlt }}"
              class="lazyload"
              loading="lazy">
              <noscript>
                <img srcset="{{ blog.data.fulltextImage | imgSuffix('320') }} 320w,
                  {{ blog.data.fulltextImage | imgSuffix('480') }} 480w,
                  {{ blog.data.fulltextImage | imgSuffix('768') }} 768w"
                  src="{{ blog.data.fulltextImage | imgSuffix('320') }}"
                  alt="{{ blog.data.introImageAlt }}">
              </noscript>
              <span class="screen-reader-only">blog.title</span>
            {% endif %}
      </a>

      <p>
        <a class="btn big" href="{{ blog.url }}">Full Story</a>
      </p>
  </article>
  {% endif %}
  {% endif %}
{% endfor %}

<section class="posts" itemscope="" itemtype="https://schema.org/Blog">
{% for blog in collections.blogs | reverse %}
  {% if loop.index < 4 %}
  {% if loop.index !== 1 %}
      <article itemscope="" itemtype="https://schema.org/BlogPosting">
        <header class="major">
          <span class="date">
            <svg class="icon">
              <use xlink:href="#ttc-i-calendar-alt"></use>
            </svg> 
            <time class="postslist-date" datetime="{{ blog.date | htmlDateString }}">{{ blog.date | readableDate }}</time>
          </span>
          <a href="{{ blog.url | url }}" class="postslist-link">
            <h2>{% if blog.data.title %}{{ blog.data.title }}{% endif %}</h2>
          </a>
          <p>{{ blog.data.custom_excerpt }}</p>
        </header>
          {% if blog.data.fulltextImage %}
            <img data-src="{{ blog.data.fulltextImage | imgSuffix('480') }}"
              class="lazyload" loading="lazy" alt="{{ blog.data.fulltextImageAlt}}"/>
              <noscript>
                <img src="{{ blog.data.fulltextImage | imgSuffix('480') }}" alt="{{ blog.data.fulltextImageAlt}}" />
              </noscript>
          {% endif %}
          <a class="btn" href="{{ blog.url }}">Full Story</a>
      </article>

  {% endif %}
  {% endif %}
{% endfor %}
</section>
<script>{{ '_assets/js/lazyloadImgs.js' | inlineCss | safe }}</script>

