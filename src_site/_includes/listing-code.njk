<main id="main">
<style>{% include "assets/static/css/codes.css" %}</style>
<section class="grid-cards">
  {% for code in collections.code | reverse %}
    <article  class="grid-cards-item">
      <header class="card-header">
          {% if code.data.image %}
            {% imagine blog.data.image, blog.data.imageAltText, "(min-width: 30em) 50vw, 100vw" %}
          {% endif %}
          <a href="{{ code.url | url }}">
            <h2>{% if code.data.title %}{{ code.data.title }}{% endif %}</h2>
          </a>
      </header>
      <div class="card-body">
        <p>{{ blog.data.custom_excerpt }}</p>
      </div>
      <footer class="card-footer">
          <a class="btn" href="{{ blog.url }}">Full Story</a>
      </footer>
    </article>
  {% endfor %}
</section>
<script type="module" id="only-for-partials">document.title =  "{{ metadata.title }}{% if title %} - {{ title }}{% endif %}";</script>
</main>
