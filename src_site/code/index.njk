---
layout: base.njk
title: Code
---
<main class="main">
<h2 class="code-title">Side Projects</h2>
  <ul class="cards web">
  {# Loop through all the web widgets #}
  {% for blog in codeData.web %}
    <li class="card">
      {% if blog.title %}
        <header class="card-header">
          <h2 class="card-title">{{ blog.title }}</h2>
        </header>
      {% endif %}
      <div class="card-body">
        {% if blog.image %}
          <img class="card-img" loading="lazy" src="/static/images/code/{{ blog.image }}" alt="{{ blog.imageAltText }}" />
        {% endif %}
        <p>{{ blog.description }}</p>
      </div>
      <footer class="card-footer">
        <nav>
          <ul class="nav-links">
            {% if blog.link %}
              <li class="nav-item">
                <a target="_blank" rel="noopener" href="{{ blog.link }}">website</a>
              </li>
            {% endif %}
            {% if blog.repo %}
              <li class="nav-item">
                <a target="_blank" rel="noopener" href="{{ blog.repo }}">Source code</a>
              </li>
            {% endif %}
      </footer>
    </li>
  {% endfor %}
  </ul>
</main>
