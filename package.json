  "site": {
    "scripts": [
      {
        "input": "./node_modules/lite-youtube-embed/src/index.js",
        "output": "./intermediate/js/lite-youtube-embed.esm.js"
      },
      {
        "input": "./node_modules/ce-theme-switcher/src/index.js",
        "output": "./intermediate/js/ce-theme-switcher.esm.js"
