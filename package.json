    "html-minifier": "4.0.0",
    "image-size": "1.0.0",
    "jsdom": "16.6.0",
    "linkedom": "0.9.3",
    "lodash": "4.17.21",
    "luxon": "1.27.0",
    "markdown-it": "12.0.6",
    "markdown-it-anchor": "8.0.1",
    "node-fetch": "2.6.1",
    "npm-run-all": "4.1.5",
    "path": "0.12.7",
